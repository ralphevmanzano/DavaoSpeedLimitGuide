<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"
        android:left="4dp">
        <shape
            android:shape="oval">
            <solid android:color="@android:color/holo_red_dark" />
        </shape>
    </item>
    <item
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"
        android:left="8dp">
        <shape
            android:shape="oval">
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <stroke android:width="4dp"
                    android:color="@android:color/white"/>
        </shape>
    </item>
</layer-list>