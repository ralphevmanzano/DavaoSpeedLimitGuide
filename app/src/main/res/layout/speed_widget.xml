<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="84dp"
    android:layout_height="84dp">

    <TextView
        android:id="@+id/txtSpeedLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/txtSpeedVal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Max Speed"
        tools:ignore="SmallSp"/>

    <TextView
        android:id="@+id/txtSpeedVal"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/dash"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtSpeedLbl"
        app:layout_constraintStart_toStartOf="@+id/txtSpeedLbl"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/km_h"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/txtSpeedVal"
        app:layout_constraintStart_toStartOf="@+id/txtSpeedVal"
        app:layout_constraintTop_toBottomOf="@+id/txtSpeedVal"
        tools:ignore="SmallSp"/>
</android.support.constraint.ConstraintLayout>